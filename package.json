{
  "name": "boil",
  "version": "0.0.0",
  "description": "Project scaffolding tool using hsfiles templates",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run build && node dist/boil.cjs",
    "build": "esbuild src/main.ts --bundle --platform=node --target=node22 --banner:js='#!/usr/bin/env node' --outfile=dist/boil.cjs --minify",
    "typecheck": "tsc --noemit",
    "lint": "eslint",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": "22.16.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "scaffold",
    "template",
    "project-generator"
  ],
  "author": "datalek",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.5",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-functional": "^9.0.1",
    "eslint-plugin-prettier": "^5.2.6",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.2.3"
  }
}
